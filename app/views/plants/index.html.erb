<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Frequency</th>
      <th>Amount</th>
      <th>Unit of measure</th>
      <th>Location</th>
      <th>Garden</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.frequency %></td>
        <td><%= plant.amount %></td>
        <td><%= plant.unit_of_measure %></td>
        <td><%= plant.location %></td>
        <td><%= plant.garden.name %></td>
        <td><%= link_to 'Show Garden', [@garden] %></td>
        <td><%= link_to 'Edit', edit_garden_plant_path(@garden, plant) %></td>
        <td><%= link_to 'Remove Plant', [@garden, plant], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_garden_plant_path(@garden) %>
